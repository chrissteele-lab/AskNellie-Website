---
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Ask Nellie - Reliable, Friendly Handyman Services" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>

        <!-- SEO -->
		<meta name="description" content={description} />
		<meta name="keywords" content="handyman, repairs, carpentry, flatpack assembly, home improvement, TV mounting, jetwashing, garden maintenance, plumbing, electrician, Ask Nellie" />
		<meta name="author" content="Ask Nellie Handyman Services" />
		<link rel="canonical" href="https://asknellie.co.uk/" />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://asknellie.co.uk/" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content="https://asknellie.co.uk/icon-512x512.png" />
		<meta property="og:site_name" content="Ask Nellie Handyman Services" />

        <!-- Twitter -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:url" content="https://asknellie.co.uk/" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content="https://asknellie.co.uk/icon-512x512.png" />

        <!-- Favicons -->
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<meta name="theme-color" content="#1B365D" />

		<meta name="generator" content={Astro.generator} />
	</head>
	<body class="font-body text-gray-800 antialiased selection:bg-orange-500 selection:text-white">
		<slot />
		<script>
			// Contact deobfuscation â€” decodes base64-reversed values at runtime
			// so bots scraping static HTML won't find plaintext phone/email
			function d(s: string): string { return atob(s.split('').reverse().join('')); }
			document.addEventListener('DOMContentLoaded', () => {
				document.querySelectorAll('[data-contact-href]').forEach(el => {
					(el as HTMLAnchorElement).href = d((el as HTMLElement).dataset.contactHref!);
				});
				document.querySelectorAll('[data-contact-text]').forEach(el => {
					el.textContent = d((el as HTMLElement).dataset.contactText!);
				});
			});
		</script>
	</body>
</html>
