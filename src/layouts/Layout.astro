---
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Ask Nellie Handyman Services — Professional, reliable, and friendly handyman across Stoke-on-Trent, Newcastle-under-Lyme, & Staffordshire. 20+ years experience in kitchen & bathroom maintenance, worktop repairs, plumbing, and odd jobs. Free quotes." } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>

        <!-- SEO -->
		<meta name="description" content={description} />
		<meta name="keywords" content="handyman Stoke-on-Trent, handyman Staffordshire, handyman Newcastle-under-Lyme, kitchen maintenance, bathroom maintenance, silicone resealing, granite worktop repair, quartz worktop repair, home repairs, flatpack assembly, TV wall mounting, door hanging, garden maintenance, Ask Nellie, local handyman services" />
		<meta name="author" content="Ask Nellie Handyman Services" />
		<meta name="geo.region" content="GB-STS" />
		<meta name="geo.placename" content="Stoke-on-Trent" />
		<meta name="geo.position" content="53.0027;-2.1794" />
		<meta name="ICBM" content="53.0027, -2.1794" />
		<link rel="canonical" href="https://asknellie.co.uk/" />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://asknellie.co.uk/" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content="https://asknellie.co.uk/assets/images/logo.jpg" />
		<meta property="og:site_name" content="Ask Nellie Handyman Services" />

        <!-- Twitter -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:url" content="https://asknellie.co.uk/" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content="https://asknellie.co.uk/assets/images/logo.jpg" />

        <!-- Favicons -->
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<meta name="theme-color" content="#1B365D" />

		<meta name="generator" content={Astro.generator} />

		<!-- Local Business Schema.org -->
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "HomeAndConstructionBusiness",
			"name": "Ask Nellie Handyman Services",
			"image": "https://asknellie.co.uk/assets/images/logo.jpg",
			"url": "https://asknellie.co.uk",
			"description": "Reliable, friendly handyman services across Stoke-on-Trent and Staffordshire. Over 20 years' experience.",
			"address": {
				"@type": "PostalAddress",
				"streetAddress": "Alfreton Road",
				"addressLocality": "Stoke-on-Trent",
				"addressRegion": "Staffordshire",
				"postalCode": "ST4 2NX",
				"addressCountry": "GB"
			},
			"geo": {
				"@type": "GeoCoordinates",
				"latitude": 53.0027,
				"longitude": -2.1794
			},
			"areaServed": [
				"Stoke-on-Trent", "Hanley", "Fenton", "Longton", "Burslem", "Tunstall",
				"Newcastle-under-Lyme", "Leek", "Stone", "Stafford", "Cheadle", "Biddulph",
				"Kidsgrove", "Audley", "Endon", "Brown Edge", "Werrington", "Trentham"
			],
			"priceRange": "££",
			"openingHours": "Mo-Sa 08:00-18:00",
			"founder": {
				"@type": "Person",
				"name": "Neil Hughes"
			}
		})} />
	</head>
	<body class="font-body text-gray-800 antialiased selection:bg-orange-500 selection:text-white">
		<slot />
		<script>
			// Contact deobfuscation — decodes base64-reversed values at runtime
			// so bots scraping static HTML won't find plaintext phone/email
			function d(s: string): string { return atob(s.split('').reverse().join('')); }
			document.addEventListener('DOMContentLoaded', () => {
				document.querySelectorAll('[data-contact-href]').forEach(el => {
					(el as HTMLAnchorElement).href = d((el as HTMLElement).dataset.contactHref!);
				});
				document.querySelectorAll('[data-contact-text]').forEach(el => {
					el.textContent = d((el as HTMLElement).dataset.contactText!);
				});
			});
		</script>
	</body>
</html>
