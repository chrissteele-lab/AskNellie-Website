---
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Ask Nellie - Reliable, Friendly Handyman Services" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="font-body text-gray-800 antialiased selection:bg-orange-500 selection:text-white">
		<slot />
	</body>
</html>
