---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Ask Nellie | Handyman Services">
	<Header />
	<main class="pt-24 min-h-screen">
		<section class="max-w-7xl mx-auto px-6 py-20 text-center">
			<h1 class="text-5xl md:text-7xl font-heading font-bold text-trust-blue mb-6">
				Reliable, Friendly<br /> Handyman Services
			</h1>
			<p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
				Professional, clean, and punctual service for all your home repair and improvement needs.
			</p>
			<a href="#contact" class="inline-block bg-action-orange text-white text-lg font-semibold px-8 py-4 rounded-full hover:bg-orange-600 transition-all shadow-lg hover:shadow-xl hover:-translate-y-1">
				Get a Free Quote
			</a>
		</section>
	</main>
	<Footer />
</Layout>
